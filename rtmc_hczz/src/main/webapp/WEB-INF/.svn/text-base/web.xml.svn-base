    <url-pattern>*.apk</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/pages/404.jsp</location>
  </error-page>
  <session-config>
    <session-timeout>0</session-timeout>
  </session-config>
