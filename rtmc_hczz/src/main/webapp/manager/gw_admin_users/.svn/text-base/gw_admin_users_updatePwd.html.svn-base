 <script type="text/javascript">
 //组算组别id
 var form;
 $(function ()
 { 
     //创建表单结构 
     form = $("#gwUpdatePwdForm").ligerForm({
         inputWidth: 260, labelWidth:120, space: 40,labelAlign:'right',
			validate : true,
         fields: [
		{ display: "旧密码", name: "oldPwd", newline: true, type: "text",validate:{required:true}},
		{ display: "新密码", name: "newPwd", newline: true, type: "password",validate:{required:true}},
		{ display: "重复密码", name: "newPwd2", newline: true, type: "password",validate:{required:true}}
         ]
     }); 
 });
         //修改密码界面
         function UpdatePwd(){
        	if(!$("#gwUpdatePwdForm").valid()){
        		return;
        	}
        	$.ajax({
        		url:'/adminUsers/goUpdatePwd.do',
        		method:'POST',
        		dataType:'json',
        		data:$("#gwUpdatePwdForm").serialize(),
        		success:function(data){
        			if(data.status.code=="10000"){
        				$.ligerDialog.alert(data.status.msg, "提示信息", "success",function(){
        			          parent.closeDialog();
        			       });
        			}else{
        				$.ligerDialog.alert(data.status.msg, "提示信息", "error");
        			}
        		},
        		
        		
        	});
        }
    </script>
</head>
<body>

   <form id="gwUpdatePwdForm" style="margin-left:90px;margin-top:80px;">
           
    </form>    
     
    <div class="btn" style="margin-left:265px;margin-top:50px;">
           <a class="update" href="javascript:UpdatePwd()">保存</a>
     </div>  
</body>
